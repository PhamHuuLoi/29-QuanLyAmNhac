<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aapt="http://schemas.android.com/aapt"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã bài hát: "/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTenCot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài hát: "/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTenCot2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sáng tác:" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTenCot3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạc sĩ:" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTenCot4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/ln1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạc sĩ:" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTenCot5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
